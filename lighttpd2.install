pre_install() {
  getent group www-data > /dev/null
  if [ $? -ne 0 ];then
    echo 'Adding group www-data'
    groupadd  -r www-data
  fi
  id www-data > /dev/null
  if [ $? -ne 0 ];then
    echo 'Adding user www-data'
    useradd -r www-data -g www-data
  fi
}

post_install() {
  install -D -m0644 /usr/share/doc/lighttpd2/lighttpd.conf /etc/lighttpd2/lighttpd.conf
  install -D -m0644 /usr/share/doc/lighttpd2/angel.conf /etc/lighttpd2/angel.conf
  install -D -m0644 /usr/share/doc/lighttpd2/mimetypes.conf /etc/lighttpd2/mimetypes.conf
  echo "Lighttpd2 is installed, start with
        /usr/sbin/lighttpd2 -c /etc/lighttpd2/angel.conf or link /etc/sv/lighttpd2 to your 
        supervised (runit/daemontools) directory." 
  post_upgrade
}

post_upgrade() {
  echo "Lighttpd's default configuration available in
        /usr/share/doc/lighttpd2/*.conf"
}

